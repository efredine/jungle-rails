<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-sm-6">
              <h3>Reviews</h3>
            </div>
            <div class="col-sm-6">
              <h3 class="text-right">Average Rating <%= @product.average_rating %></h3>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table">
            <thead>
              <tr>
                <th>User</th>
                <th>Rating</th>
                <th>Description</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @product.reviews.each do |review| %>
                <tr>
                  <td><%= review.user.first_name %> <%= review.user.last_name %></td>
                  <td><%= review.rating %></td>
                  <td><%= review.description %></td>
                  <td>
                    <% if review.user.id == current_user.id %>
                      <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div> <!-- panel body -->
        <div class="panel-footer">
          <% if current_user %>
            <div class="form-inline">
              <%= form_for [@product, @review] do |form| %>
                <% if flash[:error_messages] %>
                  <div class="alert alert-danger">
                    <strong>The following errors prevented saving:</strong>
                    <ul>
                      <% flash[:error_messages].each do |error| %>
                        <li><%= error %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="form-group">
                  <%= form.label :rating %>
                  <%= form.number_field(:rating, class: 'form-control')  %>
                </div>
                <div class="form-group">
                  <%= form.label :description %>
                  <%= form.text_field :description, class: 'form-control' %>
                </div>
                <%= form.submit 'Create Review', class: 'btn btn-primary' %>
              <% end %>
            </div>
          <% else %>
            <p><%= link_to 'Login', '/login' %>  to leave a review.</p>
          <% end %>
        </div> <!-- panel footer -->
      </div> <!-- panel -->
    </div> <!-- row -->
  </article>

</section>
